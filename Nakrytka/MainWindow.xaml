<Window x:Class="Nakrytka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nakrytka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Ссылка" FontSize="17"></TextBlock>
            <TextBox x:Name="SrlText" FontSize="17"></TextBox>
            <TextBlock Text="Количество окн" FontSize="17"></TextBlock>
            <TextBox x:Name="KolText" FontSize="17"></TextBox>
            <TextBlock Text="Время" FontSize="17"></TextBlock>
            <TextBox x:Name="TimeText" FontSize="17"></TextBox>
            <Button x:Name="StartBtn" FontSize="17" Click="StartBtn_Click" Content="Start" Margin="0,10"></Button>
        </StackPanel>
    </Grid>
</Window>
